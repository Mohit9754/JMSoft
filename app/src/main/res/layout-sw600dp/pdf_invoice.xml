<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_400sdp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:textSize="8sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="بيع وشراء جميع أنواع المجوهرات"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:textSize="8sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="Buy and sell all types of jewelry"/>


    <RelativeLayout
        android:layout_width="@dimen/_350sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/dark_blue">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="7sp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="ORDER N°"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="7sp"
                        android:text="الطلب رقم"/>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="016862"
                android:id="@+id/tvOrderNo"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="7sp"
                android:layout_marginTop="@dimen/_5sdp"
                />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:strokeWidth="1dp"
            android:layout_alignParentEnd="true"
            app:strokeColor="@color/dark_blue">

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/_350sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client :"
            android:textSize="7sp"
            android:textColor="@color/dark_blue"
            />

        <LinearLayout
            android:layout_width="250dp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohit Chouhan"
                android:id="@+id/tvClient"
                android:textSize="7sp"
                android:textColor="@color/dark_blue"
                />

            <TextView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:text="............................................................................................"
                android:layout_marginTop="@dimen/_minus7sdp"
                android:textSize="7sp"
                android:textColor="@color/dark_blue"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="7sp"
            android:textColor="@color/dark_blue"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 june 2024"
                android:id="@+id/tvDate"
                android:textSize="7sp"
                android:textColor="@color/dark_blue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="........................"
                android:layout_marginTop="@dimen/_minus7sdp"
                android:textSize="7sp"
                android:textColor="@color/dark_blue"
                />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_350sdp"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كمية"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كمية"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="وزن"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="قيراط"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carat"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تعيين"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designation"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    />

                <LinearLayout
                    android:layout_width="@dimen/_44sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كمية"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N.P"
                        android:textSize="7sp"
                        android:textColor="@color/dark_blue"
                        />

                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/invoice_item"
                android:id="@+id/rvItems"
                />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_153sdp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_marginTop="-1dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/blue"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:id="@+id/tvTotalAmount"
                    android:textSize="7sp"
                    android:textColor="@color/dark_blue"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="@dimen/_30sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المبلغ الإجمالي"
                    android:textSize="7sp"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total amount"
                    android:textSize="7sp"
                    android:textColor="@color/dark_blue" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


