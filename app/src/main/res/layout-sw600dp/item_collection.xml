<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_6sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    app:cardBackgroundColor="@color/off_white"
    app:cardElevation="@dimen/_4sdp"
    android:id="@+id/mcvCollectionItem"
    android:outlineAmbientShadowColor="@color/ambientShadowColor"
    android:outlineSpotShadowColor="@color/spotShadowColor"
    app:cardCornerRadius="@dimen/_7sdp"
    tools:ignore="MissingDefaultResource,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_7sdp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:id="@+id/tvProductName"
            android:fontFamily="@font/montserrat_arabic_bold"
            android:text="@string/royal_gold_ring"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_14sdp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/off_white"
            app:cardCornerRadius="@dimen/_50sdp">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                android:id="@+id/ivProductImage"
                android:src="@drawable/img_ring_product"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvCartStatus"
                android:outlineAmbientShadowColor="@color/ambientShadowColor"
                android:outlineSpotShadowColor="@color/spotShadowColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                tools:ignore="UnusedAttribute">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:id="@+id/ivCartStatus"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:layout_marginVertical="@dimen/_4sdp"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_arabic_bold"
                    android:text="@string/_35_000"
                    android:id="@+id/tvProductPrice"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_arabic_bold"
                    android:text="@string/dh"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>