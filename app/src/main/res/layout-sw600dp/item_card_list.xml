<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardBackgroundColor="@color/off_white"
    app:cardElevation="0dp"
    android:id="@+id/mcvCartProduct"
    app:cardCornerRadius="@dimen/_5sdp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingStart="@dimen/_8sdp"
        tools:ignore="DisableBaselineAlignment,RtlSymmetry">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcvImage"
            android:layout_marginStart="1dp"
            android:layout_marginVertical="@dimen/_4sdp"
            app:cardBackgroundColor="@color/off_white"
            app:cardCornerRadius="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:id="@+id/ivProduct"
                android:elevation="0dp"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_arabic_bold"
            android:id="@+id/tvName"
            android:textColor="@color/black"
            android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:gravity="end"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:text="@string/plus"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:padding="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:text="@string/minus"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_16sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llPrice"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:fontFamily="@font/montserrat_arabic_medium"
                    android:id="@+id/tvPrice"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:fontFamily="@font/montserrat_arabic_medium"
                    android:text="@string/dh"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:outlineAmbientShadowColor="@color/ambientShadowColor"
                android:outlineSpotShadowColor="@color/spotShadowColor"
                android:layout_marginEnd="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_red"
                app:cardCornerRadius="@dimen/_6sdp"
                tools:ignore="UnusedAttribute">

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:src="@drawable/icon_cross"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>