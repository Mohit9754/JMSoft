<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mcvCollectionImage"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:layout_marginVertical="@dimen/_4sdp"
                app:cardBackgroundColor="@color/off_white"
                app:cardCornerRadius="@dimen/_15sdp">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:scaleType="centerCrop"
                    android:id="@+id/ivProduct"
                    android:elevation="0dp"
                    android:src="@drawable/img_ring_product"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tvMetalType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Royal Gold Ring"
                android:fontFamily="@font/montserrat_arabic_regular"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="RelativeOverlap,SmallSp" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gold"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ring"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="g"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Origin"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="50"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="23"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1200DH"
            android:gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_arabic_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardBackgroundColor="@color/mcv_background_color"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:src="@drawable/icon_edit"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:cardBackgroundColor="@color/mcv_background_color"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:src="@drawable/icon_delete"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

